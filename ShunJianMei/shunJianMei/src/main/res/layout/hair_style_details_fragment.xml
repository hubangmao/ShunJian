<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#e53123" >

        <ImageView
            android:id="@+id/iv_hairStryleDetails_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:padding="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_back_white" />

        <TextView
            android:id="@+id/tv_hairStryleDetails_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_hairStryleDetails_right_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/star_collect_solid" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="440dp" >

                <ImageView
                    android:id="@+id/iv_hairstyle_details_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_hairstyle_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:paddingBottom="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp" >

                <TextView
                    android:id="@+id/tv_HairStyleDetail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/red_e5"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_ps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_HairStyleDetail_price"
                    android:text="此价格仅包括洗剪吹服务"
                    android:textColor="@color/gray_d8"
                    android:textSize="@dimen/textsize_15"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_HairStyleDetail_ps"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_HairStyleDetail_price"
                    android:text=""
                    android:textColor="@color/gray_ab"
                    android:textSize="@dimen/textsize_15" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_HairStyleDetail_service"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_HairStyleDetail_price"
                    android:text=""
                    android:textColor="@color/gray_ab"
                    android:textSize="@dimen/textsize_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/gray_e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/iv_HairStyleDetail_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_mastername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_HairStyleDetail_photo"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_HairStyleDetail_photo"
                    android:text=""
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_18" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_HairStyleDetail_levename"
                    android:layout_alignBottom="@+id/tv_HairStyleDetail_levename"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_HairStyleDetail_levename"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_17" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_levename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_HairStyleDetail_mastername"
                    android:layout_alignBottom="@+id/tv_HairStyleDetail_mastername"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_HairStyleDetail_mastername"
                    android:text=""
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_18" />

                <RatingBar
                    android:id="@+id/ratingbar_all_masterevaluate"
                    style="@style/MyCommentRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_HairStyleDetail_mastername"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_HairStyleDetail_photo"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="1"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_OrderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ratingbar_all_masterevaluate"
                    android:layout_below="@+id/ratingbar_all_masterevaluate"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/textsize_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/gray_e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tx_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="发型详情"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_16" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tx_details"
                    android:background="@color/gray_e5" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_15" />

                <TextView
                    android:id="@+id/tv_HairStyleDetail_xinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_HairStyleDetail_Content"
                    android:layout_marginTop="10dp"
                    android:text="图片仅供参考，到店后发型师会为您量身定做合适的发型"
                    android:textColor="@color/red_e5"
                    android:textSize="@dimen/textsize_14"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_e5" />

            <RelativeLayout
                android:id="@+id/rl_hairStryleDetails_Comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tv_hairStryleDetails_Comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:text="用户评论"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/tv_hairStryleDetails_Comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_hairStryleDetails_Comment"
                    android:text="(0)"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/arrow_down_look"
                    android:text="" />

                <ImageView
                    android:id="@+id/arrow_down_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/arrow_right_gray" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray_e5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp" >

                <TextView
                    android:id="@+id/tv_empty_hairStylecomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:paddingBottom="40dp"
                    android:text="没有评论"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/textsize_18"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_hairStryleDetail_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/image_hairStryleDetails_commentPhoto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/empty_head_photo" />

                    <TextView
                        android:id="@+id/tv_hairStryleDetails_commentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/image_hairStryleDetails_commentPhoto"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_14" />

                    <RatingBar
                        android:id="@+id/ratingbar_hairStryleDetails_commentScore"
                        style="@style/MyCommentRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_hairStryleDetails_commentName"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/image_hairStryleDetails_commentPhoto"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/tv_hairStryleDetails_commentcontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingbar_hairStryleDetails_commentScore"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/textView2"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_hairStryleDetails_commentcontent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp" >

                        <ImageView
                            android:id="@+id/image_hairStryleDetails_comment_style1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_prc"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/image_hairStryleDetails_comment_style2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_prc"
                            android:visibility="gone" />

                        <ImageView

                            android:id="@+id/image_hairStryleDetails_comment_style3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_prc"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_hairStryleDetails_commmentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/ratingbar_hairStryleDetails_commentScore"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayoutBottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#e53123" >

        <Button
            android:id="@+id/btn_hairStyleDetailappointment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bg_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="预约"
            android:textColor="@color/red_e5" />
    </RelativeLayout>

</LinearLayout>