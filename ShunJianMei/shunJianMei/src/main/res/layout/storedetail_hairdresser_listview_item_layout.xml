<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_photo_storedetail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/tx_man" />

    <TextView
        android:id="@+id/tv_name_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_photo_storedetail"
        android:text="阿东"
        android:textColor="@color/black33"
        android:textSize="@dimen/textsize_15" />

    <TextView
        android:id="@+id/tv_levelname_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_name_storedetail"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="资深发型师"
        android:textColor="@color/black33"
        android:textSize="@dimen/textsize_15" />

    <TextView
        android:id="@+id/tv_star_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_levelname_storedetail"
        android:text="天蝎座"
        android:textColor="@color/grey"
        android:textSize="@dimen/textsize_13" />
   
   <RatingBar
       android:id="@+id/ratingbar_lv_stroedetail"
       style="@style/MyCommentRatingBar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/tv_name_storedetail"
       android:layout_toRightOf="@id/iv_photo_storedetail"
       android:layout_marginTop="10dp"
       android:isIndicator="true"
       android:numStars="5" />

    <TextView
        android:id="@+id/tv1_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_name_storedetail"
        android:layout_toRightOf="@id/ratingbar_lv_stroedetail"
        android:text="接单"
        android:textColor="@color/grey"
        android:textSize="@dimen/textsize_12" />

    <TextView
        android:id="@+id/tv_ordernum_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_name_storedetail"
        android:layout_toRightOf="@id/tv1_storedetail"
        android:text="136次"
        android:textColor="@color/grey"
        android:textSize="@dimen/textsize_12" />

    <View 
        android:id="@+id/line_storedetail"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_photo_storedetail"
        android:background="@color/main_grey_bg"/>
    
       <LinearLayout
        android:id="@+id/ll_storedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_storedetail"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_hairdressert_detail_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_hairdressert_detail_storedetail"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/list_item" />

            <TextView
                android:id="@+id/tv_hairdressert_detail_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="详情"
                android:textSize="@dimen/textsize_15" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_d8" />

        <LinearLayout
            android:id="@+id/ll_hairdressert_reserve_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_hairdressert_time_storedetail"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/time_red" />

            <TextView
                android:id="@+id/tv_hairdressert_time_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="预约"
                android:textSize="@dimen/textsize_15" />
        </LinearLayout>
    </LinearLayout>
    
    <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:layout_below="@id/ll_storedetail"
       android:background="@color/main_grey_bg" />
        
</RelativeLayout>