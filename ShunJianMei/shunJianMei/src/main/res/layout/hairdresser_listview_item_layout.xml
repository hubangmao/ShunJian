<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_image_hairdresser"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/store_picture" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_photo_hairdresser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/tx_man" />

        <TextView
            android:id="@+id/tv_name_hairdresser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_photo_hairdresser"
            android:text="阿东"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_levelname_hairdresser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_name_hairdresser"
            android:text="资深发型师"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_star_hairdresser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_levelname_hairdresser"
            android:text="天蝎座"
            android:textColor="@color/gray_ab"
            android:textSize="@dimen/textsize_15" />

        <LinearLayout
            android:id="@+id/ll_ratingbar_hairdresser"
            android:layout_width="120dp"
            android:layout_height="13dp"
            android:layout_below="@id/tv_name_hairdresser"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_photo_hairdresser"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_ordernum_text_hairdresser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_star_hairdresser"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ll_ratingbar_hairdresser"
            android:text="接单"
            android:textColor="@color/gray_ab"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_ordernum_hairdresser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_star_hairdresser"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_ordernum_text_hairdresser"
            android:text="136次"
            android:textColor="@color/gray_ab"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_detail_hairdresser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:src="@drawable/hairdresser_detail_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textColor="@color/gray_ab"
                android:textSize="@dimen/textsize_15" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/main_grey_bg" />

        <LinearLayout
            android:id="@+id/ll_reserve_hairdresser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:src="@drawable/hairdresser_reserve_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约"
                android:textColor="@color/gray_ab"
                android:textSize="@dimen/textsize_15" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

</LinearLayout>