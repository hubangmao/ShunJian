<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pulltorefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_prc" />

            <TextView
                android:id="@+id/tv_opentime_text_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:text="营业时间:"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tv_opentime_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tv_opentime_text_storedetail"
                android:text="  "
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tv_picturenum_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="  "
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_storedetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_name_icon_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/tv_name_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_name_icon_storedetail"
                android:text="  "
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_15" />
            
			<ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right_gray" />

            <TextView
                android:id="@+id/tv_distance_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text=" "
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_13" />

            <TextView
                android:id="@+id/tv_distance_text_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/tv_distance_storedetail"
                android:text="距离"
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_13" />

            <TextView
                android:id="@+id/tv_address_text_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_storedetail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_name_icon_storedetail"
                android:text=""
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv_address_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_name_storedetail"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_address_text_storedetail"
                android:text=" "
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_12" />

            <RatingBar
                android:id="@+id/ratingbar_stroedetail"
                style="@style/MyCommentRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_storedetail"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5" />

            <TextView
                android:id="@+id/tv_ordernum_text_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_storedetail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ratingbar_stroedetail"
                android:text="接单"
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv1_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_storedetail"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv_ordernum_text_storedetail"
                android:text=" 次"
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv_parking_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_storedetail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tv1_storedetail"
                android:text=" 停车位"
                android:textColor="@color/grey"
                android:textSize="@dimen/textsize_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_phone_storedetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_phone_icon_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/storedetail_phone_icon" />

            <TextView
                android:id="@+id/tv_phone_text_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_phone_icon_storedetail"
                android:paddingBottom="10dp"
                android:text="电话:"
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tv_phone_storedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/tv_phone_text_storedetail"
                android:text=" "
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right_gray" />
        </RelativeLayout>
        
        <View
            android:id="@+id/rl_quick_pay_lineview"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#e0e0e0" />
        
        <RelativeLayout
            android:id="@+id/rl_quick_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/quickpay_icon2" />
            
            <TextView
                android:id="@+id/tv_quick_pay_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="15dp"
                android:text="每次支付优惠2元"
                android:textColor="@color/red_e5"
                android:textSize="@dimen/textsize_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right_gray" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f2f2f2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <LinearLayout
            android:id="@+id/ll_storedetial"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_style_storedetial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="美发师"
                android:textColor="@color/red_e5"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tv_dresser_storedetial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商户介绍"
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_15" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_grey_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/cursor1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="#e53123" />

                <View
                    android:id="@+id/cursor2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@color/main_grey_bg" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_child_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</ScrollView>