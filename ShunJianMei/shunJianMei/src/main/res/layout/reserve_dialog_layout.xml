<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_type_reserve_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:text="发型类型"
        android:textColor="@color/black33"
        android:textSize="@dimen/textsize_15" />

    <View
        android:id="@+id/line_reserve_dialog"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e0e0e0" />

    <cc.ruit.shunjianmei.util.view.MyListView
        android:id="@+id/listview_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_reserve_dialog"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <TextView
        android:id="@+id/tv_reserve_dialog_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="过肩为长发，过耳不过肩为中发，不过耳为短发"
        android:textColor="@color/red_e5"
        android:visibility="gone"
        android:textSize="@dimen/textsize_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <TextView
            android:id="@+id/tv_reserve_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray_ab"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_reserve_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/red_e5"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

</LinearLayout>