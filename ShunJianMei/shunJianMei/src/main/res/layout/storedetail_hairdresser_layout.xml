<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_left_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/forward_left_red" />

        <HorizontalScrollView
            android:id="@+id/scrollview_storedetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scrollbars="@null" >

            <RadioGroup
                android:id="@+id/radiogroup_storedetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/iv_right_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:src="@drawable/forward_right_red" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <cc.ruit.shunjianmei.util.view.MyListView
        android:id="@+id/lv_dresser_storedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/main_grey_bg"
        android:dividerHeight="5dp" />

</LinearLayout>