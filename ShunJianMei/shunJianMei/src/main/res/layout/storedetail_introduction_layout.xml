<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_introduce_text_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="简介:"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_15" />

    <TextView
        android:id="@+id/tv_introduce_storedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_introduce_text_storedetail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="  "
        android:textColor="@color/black33"
        android:textSize="@dimen/textsize_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/main_grey_bg" />

    <RelativeLayout
        android:id="@+id/rl_evaluate_storedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_comment_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:text="用户评论"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_comment_num_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_comment_text_storedetail"
            android:text="(  )"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_photo_evaluate_storedetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tx_woman" />

        <TextView
            android:id="@+id/tv_name_evaluate_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_photo_evaluate_storedetail"
            android:text="  "
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <RatingBar
            android:id="@+id/ratingbar_evaluate_storedetail"
              style="@style/MyCommentRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_evaluate_storedetail"
            android:layout_toRightOf="@id/iv_photo_evaluate_storedetail"
           android:isIndicator="true"
                android:numStars="5" />

        <TextView
            android:id="@+id/tv_date_evaluate_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="  "
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_comment_evaluate_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_photo_evaluate_storedetail"
            android:layout_margin="10dp"
            android:text="    "
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_images_evaluate_storedetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comment_evaluate_storedetail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="#f2f2f2" />

</LinearLayout>