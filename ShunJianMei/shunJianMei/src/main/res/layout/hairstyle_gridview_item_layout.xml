<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_collect_hairstyle"
    android:layout_height="wrap_content"
    android:background="@drawable/hairstyle_gridview_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_photo_hairstyle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/store_picture" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/tv_name_hairstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="中长挑染发"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_money_hairstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="199"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_money_text_hairstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@id/tv_money_hairstyle"
            android:text="¥"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_soldnum_hairstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_hairstyle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="100人做过"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

    </RelativeLayout>

</LinearLayout>